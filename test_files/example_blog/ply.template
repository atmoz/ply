<html>
<head>
    <meta charset="utf-8">
    <title>{{ .Title }}</title>
</head>
<body>

{{ .Content }}

{{ if eq .Path "index.html" -}}
<ul>
    {{- range .SitemapReversed }}
    {{- if (not (eq .Path "index.html")) }}
    <li>
        {{ .Meta.date }}
        <a href="{{ pathRel $.Dir .Path }}">{{ .Title }}</a>
    </li>
    {{- end }}
    {{- end }}
</ul>
{{- end }}

</div>
</body>
</html>
